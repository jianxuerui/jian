  make build -j $(get_num_cores) || { echo -e "${RED}[-] é”™è¯¯: make build å¤±è´¥${RESET}"; if [ "$RUN_ONE_LINER_MODE" = true ]; then exit 1; else return 1; fi }
  echo -e "${GREEN}[+] Nockchain ç¼–è¯‘å®Œæˆ${RESET}"

  echo -e "${CYAN}[*] å®‰è£…é’±åŒ…...${RESET}"
  cd_nck_dir || { if [ "$RUN_ONE_LINER_MODE" = true ]; then exit 1; else return 1; fi }
  make install-nockchain-wallet || { echo -e "${RED}[-] é”™è¯¯: make install-nockchain-wallet å¤±è´¥${RESET}"; if [ "$RUN_ONE_LINER_MODE" = true ]; then exit 1; else return 1; fi }
  echo -e "${GREEN}[+] é’±åŒ…å®‰è£…å®Œæˆ${RESET}"

  echo -e "${CYAN}[*] å®‰è£…èŠ‚ç‚¹...${RESET}"
  cd_nck_dir || { if [ "$RUN_ONE_LINER_MODE" = true ]; then exit 1; else return 1; fi }
  make install-nockchain || { echo -e "${RED}[-] é”™è¯¯: make install-nockchain å¤±è´¥${RESET}"; if [ "$RUN_ONE_LINER_MODE" = true ]; then exit 1; else return 1; fi }
  echo -e "${GREEN}[+] èŠ‚ç‚¹å®‰è£…å®Œæˆ${RESET}"

  echo -e "${GREEN}===============================================${RESET}"
  echo -e "${GREEN}         ğŸ‰ Nockchain å®‰è£…æ„å»ºæˆåŠŸ! ğŸ‰         ${RESET}"
