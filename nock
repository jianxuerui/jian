  # ç¡®ä¿ cargo bin ç›®å½•åœ¨ PATH ä¸­
  RC_FILE="$HOME/.bashrc"
  [[ "$SHELL" == *"zsh"* ]] && RC_FILE="$HOME/.zshrc"
  if ! grep -q 'export PATH="$HOME/.cargo/bin:$PATH"' "$RC_FILE"; then
    echo '# Add Rust cargo bin to PATH' >> "$RC_FILE"
