  echo -e "[*] å¯ç”¨ nockchain-miner æœåŠ¡ (è®¾ç½®å¼€æœºè‡ªå¯)..."
  systemctl enable nockchain-miner.service || { echo -e "${RED}[-] å¯ç”¨ Systemd æœåŠ¡å¤±è´¥${RESET}"; pause_and_return; return; }

