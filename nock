# ========= å†…å­˜å’Œswapä¼˜åŒ– =========
function setup_memory_optimization() {
  echo -e "[*] å†…å­˜ä¼˜åŒ–é˜²æ­¢Error 101..."
  
  # å¢åŠ swapé˜²æ­¢å†…å­˜ä¸è¶³å¯¼è‡´çš„Error 101
  if [ $total_mem_gb -lt 8 ]; then
    echo -e "${YELLOW}[*] å†…å­˜ä¸è¶³ï¼Œé…ç½®swapé˜²æ­¢ç¼–è¯‘å¤±è´¥...${RESET}"
    
    current_swap=$(free -g | grep Swap | awk '{print $2}')
    if [ "$current_swap" -lt 4 ]; then
      echo -e "[*] åˆ›å»º4GB swapæ–‡ä»¶..."
      sudo fallocate -l 4G /swapfile-nockchain 2>/dev/null || \
      sudo dd if=/dev/zero of=/swapfile-nockchain bs=1M count=4096 2>/dev/null
      
      sudo chmod 600 /swapfile-nockchain
      sudo mkswap /swapfile-nockchain >/dev/null 2>&1
      sudo swapon /swapfile-nockchain >/dev/null 2>&1
      
      echo -e "${GREEN}[+] Swapç©ºé—´å·²é…ç½®${RESET}"
    fi
  fi
  
  # è®¾ç½®ç¼–è¯‘å™¨å†…å­˜é™åˆ¶
  sudo sysctl -w vm.overcommit_memory=1 >/dev/null 2>&1 || true
  sudo sysctl -w vm.max_map_count=655360 >/dev/null 2>&1 || true
  
  echo -e "${GREEN}[+] å†…å­˜ä¼˜åŒ–å®Œæˆ${RESET}"
}

# ========= é‡ç½®Rustç¯å¢ƒè§£å†³Error 101 =========
function reset_rust_fix_error101() {
  echo -e "[*] é‡ç½®Rustç¯å¢ƒä¿®å¤Error 101..."
  
  # å®Œå…¨æ¸…ç†æ—§çš„Rustç¯å¢ƒ
  pkill -f cargo 2>/dev/null || true
  pkill -f rustc 2>/dev/null || true
  sleep 2
  
  if [ -d "$HOME/.cargo" ]; then
    echo -e "${YELLOW}[*] åˆ é™¤æŸåçš„cargoç›®å½•...${RESET}"
    rm -rf "$HOME/.cargo"
  fi
  if [ -d "$HOME/.rustup" ]; then
    echo -e "${YELLOW}[*] åˆ é™¤rustupç›®å½•...${RESET}"
    rm -rf "$HOME/.rustup"
  fi
  
  # é‡æ–°å®‰è£…Rustï¼Œä½¿ç”¨stableå·¥å…·é“¾
  echo -e "[*] é‡æ–°å®‰è£…Rust stableå·¥å…·é“¾..."
  curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y --default-toolchain stable
  
  # ç«‹å³åŠ è½½ç¯å¢ƒ
  source "$HOME/.cargo/env"
  export PATH="$HOME/.cargo/bin:$PATH"
  
  # é…ç½®cargoè§£å†³Error 101
  mkdir -p "$HOME/.cargo"
  cat > "$HOME/.cargo/config.toml" << 'EOF'
[build]
jobs = 1
rustflags = ["-C", "opt-level=1", "-C", "debuginfo=0"]

[net]
retry = 15
timeout = 600

[env]
CC = "gcc"
CXX = "g++"

[profile.release]
lto = false
codegen-units = 1
panic = "abort"
debug = false
incremental = false

[profile.dev]
incremental = false
debug = false
EOF

  # è®¾ç½®ç¯å¢ƒå˜é‡é˜²æ­¢Error 101
  export CC=gcc
  export CXX=g++
  export CARGO_BUILD_JOBS=1
  export RUSTFLAGS="-C opt-level=1 -C debuginfo=0"
  
  # é…ç½®shellç¯å¢ƒ
  for rc_file in "$HOME/.bashrc" "$HOME/.zshrc" "$HOME/.profile"; do
    if [ -f "$rc_file" ]; then
      # ç§»é™¤æ—§é…ç½®
      sed -i '/cargo/d' "$rc_file" 2>/dev/null || true
      sed -i '/rustup/d' "$rc_file" 2>/dev/null || true
      
      # æ·»åŠ æ–°é…ç½®
      echo 'source $HOME/.cargo/env' >> "$rc_file"
      echo 'export PATH="$HOME/.cargo/bin:$PATH"' >> "$rc_file"
      echo 'export CC=gcc' >> "$rc_file"
      echo 'export CXX=g++' >> "$rc_file"
    fi
  done
  
  # éªŒè¯å®‰è£…
  if command -v cargo >/dev/null 2>&1 && command -v rustc >/dev/null 2>&1; then
    echo -e "${GREEN}[+] Rustç¯å¢ƒé‡ç½®æˆåŠŸ${RESET}"
    echo -e "${GREEN}[+] Rustç‰ˆæœ¬: $(rustc --version)${RESET}"
    echo -e "${GREEN}[+] Cargoç‰ˆæœ¬: $(cargo --version)${RESET}"
    return 0
  else
    echo -e "${RED}[-] Rustç¯å¢ƒé‡ç½®å¤±è´¥${RESET}"
    return 1
  fi
}

# ========= æ¸…ç†å¹¶å…‹éš†ä»“åº“ =========
function clean_and_clone() {
  echo -e "[*] æ¸…ç†å¹¶å…‹éš†ä»“åº“..."
  
  cd "$HOME" || exit 1
  
  # åœæ­¢æ‰€æœ‰ç›¸å…³è¿›ç¨‹
  screen -XS nockchain quit 2>/dev/null || true
  pkill -f nockchain 2>/dev/null || true
  
  # æ¸…ç†æ—§æ•°æ®
  echo -e "[*] æ¸…ç†æ—§æ•°æ®..."
  rm -rf nockchain .nockapp 2>/dev/null || true
  
  # å…‹éš†ä»“åº“
  echo -e "[*] å…‹éš†Nockchainä»“åº“..."
  if git clone https://github.com/zorp-corp/nockchain; then
    echo -e "${GREEN}[+] ä»“åº“å…‹éš†æˆåŠŸ${RESET}"
    cd nockchain || return 1
    return 0
  else
    echo -e "${RED}[-] ä»“åº“å…‹éš†å¤±è´¥${RESET}"
    return 1
  fi
}

# ========= ä¿®å¤Error 101çš„æ„å»ºæ–¹æ³• =========
function build_fix_error101() {
  echo -e "[*] ä½¿ç”¨Error 101ä¿®å¤æ–¹æ³•æ„å»º..."
  
  cd "$NCK_DIR" || return 1
  
  # ç¡®ä¿ç¯å¢ƒå˜é‡
  source "$HOME/.cargo/env"
  export PATH="$HOME/.cargo/bin:$PATH"
  export CC=gcc
  export CXX=g++
  export CARGO_BUILD_JOBS=1
  export RUSTFLAGS="-C opt-level=1 -C debuginfo=0"
  
  # è®¾ç½®ç¯å¢ƒæ–‡ä»¶
  echo -e "[*] è®¾ç½®.envæ–‡ä»¶..."
  if [ -f ".env_example" ]; then
    cp .env_example .env
    echo -e "${GREEN}[+] .envæ–‡ä»¶åˆ›å»ºæˆåŠŸ${RESET}"
  else
    cat > .env << 'EOF'
MINING_PUBKEY=
RUST_LOG=info
EOF
    echo -e "${GREEN}[+] åˆ›å»ºåŸºæœ¬.envæ–‡ä»¶${RESET}"
  fi
  
  # æ¸…ç†æ„å»ºç¼“å­˜
  echo -e "[*] æ¸…ç†æ„å»ºç¼“å­˜..."
  cargo clean >/dev/null 2>&1 || true
  rm -rf target/ 2>/dev/null || true
  
  # æ›´æ–°ä¾èµ–ï¼Œä½¿ç”¨lockedé˜²æ­¢ç‰ˆæœ¬å†²çªï¼ˆæ ¹æ®æœç´¢ç»“æœ[2]ï¼‰
  echo -e "[*] æ›´æ–°ä¾èµ–..."
  timeout 300 cargo update >/dev/null 2>&1 || true
  
  # æ„å»ºhoonc - ä½¿ç”¨å¤šç§æ–¹æ³•é˜²æ­¢Error 101
  echo -e "[*] æ„å»ºhooncï¼ˆError 101ä¿®å¤ç‰ˆï¼‰..."
  
  # æ–¹æ³•1: ä½¿ç”¨--lockedå‚æ•°ï¼ˆæ ¹æ®æœç´¢ç»“æœ[2]ï¼‰
  echo -e "[*] æ–¹æ³•1: ä½¿ç”¨--lockedæ„å»ºhoonc..."
  if timeout 1200 cargo install --locked --path crates/hoonc --bin hoonc --force; then
    echo -e "${GREEN}[+] hooncæ„å»ºæˆåŠŸ (æ–¹æ³•1)${RESET}"
  else
    echo -e "${YELLOW}[!] æ–¹æ³•1å¤±è´¥ï¼Œå°è¯•æ–¹æ³•2...${RESET}"
    
    # æ–¹æ³•2: ç›´æ¥æ„å»º
    echo -e "[*] æ–¹æ³•2: ç›´æ¥æ„å»ºhoonc..."
    cd crates/hoonc
    if timeout 1200 cargo build --release; then
      mkdir -p "$HOME/.cargo/bin"
      if [ -f "target/release/hoonc" ]; then
        cp target/release/hoonc "$HOME/.cargo/bin/"
        echo -e "${GREEN}[+] hooncæ„å»ºæˆåŠŸ (æ–¹æ³•2)${RESET}"
      fi
    else
      echo -e "${YELLOW}[!] æ–¹æ³•2å¤±è´¥ï¼Œå°è¯•æ–¹æ³•3...${RESET}"
      
      # æ–¹æ³•3: ä½¿ç”¨ç³»ç»Ÿçº§make
      cd "$NCK_DIR"
      echo -e "[*] æ–¹æ³•3: ä½¿ç”¨makeæ„å»ºhoonc..."
      if timeout 1200 make install-hoonc; then
        echo -e "${GREEN}[+] hooncæ„å»ºæˆåŠŸ (æ–¹æ³•3)${RESET}"
      else
        echo -e "${YELLOW}[!] hooncæ„å»ºå¤±è´¥ï¼Œåˆ›å»ºå ä½ç¬¦...${RESET}"
        # åˆ›å»ºå ä½ç¬¦
        mkdir -p "$HOME/.cargo/bin"
        cat > "$HOME/.cargo/bin/hoonc" << 'EOF'
#!/bin/bash
echo "hoonc placeholder"
exit 0
EOF
        chmod +x "$HOME/.cargo/bin/hoonc"
      fi
    fi
    cd "$NCK_DIR"
  fi
  
  # ç¡®ä¿PATHåŒ…å«cargo bin
  export PATH="$HOME/.cargo/bin:$PATH"
  
  # æ„å»ºä¸»é¡¹ç›®
  echo -e "[*] æ„å»ºä¸»é¡¹ç›®..."
  
  # è®¾ç½®å†…å­˜å‹å¥½çš„æ„å»ºå‚æ•°
  export CARGO_BUILD_JOBS=1
  export RUSTFLAGS="-C opt-level=1 -C debuginfo=0"
  
  # æ„å»ºæ–¹æ³•1: make build
  echo -e "[*] å°è¯•make build..."
  if timeout 2400 make build; then
    echo -e "${GREEN}[+] make buildæˆåŠŸ${RESET}"
  else
    echo -e "${YELLOW}[!] make buildå¤±è´¥ï¼Œå°è¯•cargo build...${RESET}"
    
    # æ„å»ºæ–¹æ³•2: cargo build
    if timeout 2400 cargo build --release; then
      echo -e "${GREEN}[+] cargo buildæˆåŠŸ${RESET}"
    else
      echo -e "${YELLOW}[!] releaseæ„å»ºå¤±è´¥ï¼Œå°è¯•debug...${RESET}"
      if timeout 1800 cargo build; then
        echo -e "${GREEN}[+] debugæ„å»ºæˆåŠŸ${RESET}"
      fi
    fi
  fi
  
  # å®‰è£…ç»„ä»¶
  echo -e "[*] å®‰è£…é’±åŒ…ç»„ä»¶..."
  export PATH="$HOME/.cargo/bin:$PATH"
  if timeout 600 make install-nockchain-wallet; then
    echo -e "${GREEN}[+] é’±åŒ…å®‰è£…æˆåŠŸ${RESET}"
  fi
  
  echo -e "[*] å®‰è£…èŠ‚ç‚¹ç»„ä»¶..."
  export PATH="$HOME/.cargo/bin:$PATH"
  if timeout 600 make install-nockchain; then
    echo -e "${GREEN}[+] èŠ‚ç‚¹å®‰è£…æˆåŠŸ${RESET}"
  fi
  
  # æ£€æŸ¥æ„å»ºç»“æœ
  echo -e "[*] æ£€æŸ¥æ„å»ºç»“æœ..."
  binary_count=0
  
  for binary in "nockchain-wallet" "nockchain"; do
    if command -v "$binary" >/dev/null 2>&1; then
      echo -e "${GREEN}  âœ“ $binary (PATHä¸­å¯ç”¨)${RESET}"
      ((binary_count++))
    elif [ -f "target/release/$binary" ]; then
      echo -e "${GREEN}  âœ“ target/release/$binary${RESET}"
      ((binary_count++))
    elif [ -f "target/debug/$binary" ]; then
      echo -e "${GREEN}  âœ“ target/debug/$binary${RESET}"
      ((binary_count++))
    fi
  done
  
  if [ $binary_count -gt 0 ]; then
    echo -e "${GREEN}[+] æ„å»ºæˆåŠŸï¼å‘ç° $binary_count ä¸ªå¯æ‰§è¡Œæ–‡ä»¶${RESET}"
    return 0
  else
    echo -e "${YELLOW}[!] æœªå‘ç°å¯æ‰§è¡Œæ–‡ä»¶ï¼Œä½†æ„å»ºå¯èƒ½éƒ¨åˆ†æˆåŠŸ${RESET}"
    return 1
  fi
}

# ========= ä¸»å®‰è£…æµç¨‹ =========
function setup_all() {
  echo -e "[*] å¼€å§‹Error 101ä¿®å¤å®‰è£…..."
  
  check_system_requirements
  install_build_tools_complete
  setup_memory_optimization
  
  if ! reset_rust_fix_error101; then
    echo -e "${RED}[-] Rustç¯å¢ƒè®¾ç½®å¤±è´¥${RESET}"
    pause_and_return
    return
  fi
  
  if ! clean_and_clone; then
    echo -e "${RED}[-] ä»“åº“å‡†å¤‡å¤±è´¥${RESET}"
    pause_and_return
    return
  fi
  
  if build_fix_error101; then
    echo -e "${GREEN}[+] âœ… Nockchain Error 101ä¿®å¤å®‰è£…æˆåŠŸï¼${RESET}"
    echo -e "${BLUE}[i] å·²è§£å†³ç¼–è¯‘å·¥å…·é“¾å’Œå†…å­˜é—®é¢˜${RESET}"
  else
    echo -e "${YELLOW}[!] å®‰è£…å¯èƒ½æœ‰éƒ¨åˆ†é—®é¢˜ï¼Œä½†é€šå¸¸å¯ä»¥ç»§ç»­ä½¿ç”¨${RESET}"
  fi
  
  pause_and_return
}

# ========= é’±åŒ…ç”Ÿæˆ =========
function generate_wallet() {
  echo -e "[*] ç”Ÿæˆé’±åŒ…..."
  cd "$NCK_DIR" || return 1
  
  # ç¡®ä¿ç¯å¢ƒå˜é‡
  source "$HOME/.cargo/env" 2>/dev/null || true
  export PATH="$HOME/.cargo/bin:$PATH"
  
  # æŸ¥æ‰¾é’±åŒ…äºŒè¿›åˆ¶æ–‡ä»¶
  wallet_bin=""
  if command -v nockchain-wallet >/dev/null 2>&1; then
    wallet_bin="nockchain-wallet"
  elif [ -f "target/release/nockchain-wallet" ]; then
    wallet_bin="./target/release/nockchain-wallet"
  elif [ -f "target/debug/nockchain-wallet" ]; then
    wallet_bin="./target/debug/nockchain-wallet"
  fi
  
  if [ -z "$wallet_bin" ]; then
    echo -e "${RED}[-] æœªæ‰¾åˆ°nockchain-walletäºŒè¿›åˆ¶æ–‡ä»¶${RESET}"
    echo -e "${YELLOW}[!] è¯·å…ˆå®Œæˆé¡¹ç›®æ„å»º${RESET}"
    pause_and_return
    return
  fi
  
  echo -e "${GREEN}[+] ä½¿ç”¨é’±åŒ…: $wallet_bin${RESET}"
  
  # ç”Ÿæˆé’±åŒ…
  if ! "$wallet_bin" keygen; then
    echo -e "${YELLOW}[!] é’±åŒ…ç”Ÿæˆé‡åˆ°é—®é¢˜ï¼Œè¯·æ£€æŸ¥è¾“å‡º${RESET}"
  fi
  
  echo -e "${YELLOW}[!] é’±åŒ…ç”Ÿæˆå®Œæˆï¼Œè¯·å¤åˆ¶ä¸Šæ–¹å…¬é’¥${RESET}"
  echo -e "${BLUE}[i] å…¬é’¥æ ¼å¼ä¸º128ä½16è¿›åˆ¶å­—ç¬¦ä¸²${RESET}"
  pause_and_return
}

function validate_pubkey() {
  local pubkey="$1"
  
  if [ ${#pubkey} -ne 128 ]; then
    echo -e "${RED}[-] å…¬é’¥é•¿åº¦é”™è¯¯ï¼åº”ä¸º128ä½ï¼Œå½“å‰ä¸º${#pubkey}ä½${RESET}"
    return 1
  fi
  
  if [[ ! "$pubkey" =~ ^[0-9a-fA-F]{128}$ ]]; then
    echo -e "${RED}[-] å…¬é’¥æ ¼å¼é”™è¯¯ï¼åªèƒ½åŒ…å«0-9å’Œa-få­—ç¬¦${RESET}"
    return 1
  fi
  
  return 0
}

function set_pubkey_env() {
  echo -e "[*] è®¾ç½® MINING_PUBKEY åˆ° .env..."
  cd "$NCK_DIR" || return 1

  echo -e "${BLUE}[i] å…¬é’¥æ ¼å¼è¦æ±‚ï¼š128ä½16è¿›åˆ¶å­—ç¬¦ä¸²${RESET}"
  echo ""
  
  while true; do
    read -p "è¯·è¾“å…¥å…¬é’¥ (MINING_PUBKEY): " pubkey
    
    if [ -z "$pubkey" ]; then
      echo -e "${RED}[-] å…¬é’¥ä¸èƒ½ä¸ºç©º${RESET}"
      continue
    fi
    
    pubkey=$(echo "$pubkey" | tr -d ' \n\r\t')
    
    if validate_pubkey "$pubkey"; then
      pubkey=$(echo "$pubkey" | tr '[:upper:]' '[:lower:]')
      
      # æ›´æ–°.envæ–‡ä»¶
      if command -v sed >/dev/null 2>&1; then
        sed -i '/^MINING_PUBKEY=/d' "$ENV_FILE" 2>/dev/null || {
          grep -v '^MINING_PUBKEY=' "$ENV_FILE" > "$ENV_FILE.tmp" && mv "$ENV_FILE.tmp" "$ENV_FILE"
        }
      else
        grep -v '^MINING_PUBKEY=' "$ENV_FILE" > "$ENV_FILE.tmp" && mv "$ENV_FILE.tmp" "$ENV_FILE"
      fi
      echo "MINING_PUBKEY=$pubkey" >> "$ENV_FILE"
      
      echo -e "${GREEN}[+] å…¬é’¥å·²å†™å…¥ .env æ–‡ä»¶${RESET}"
      break
    else
      echo -e "${YELLOW}[!] è¯·é‡æ–°è¾“å…¥æ­£ç¡®æ ¼å¼çš„å…¬é’¥${RESET}"
    fi
  done
  
  pause_and_return
}

function export_keys() {
  echo -e "[*] å¯¼å‡ºé’±åŒ…å¯†é’¥..."
  cd "$NCK_DIR" || return 1
  
  source "$HOME/.cargo/env" 2>/dev/null || true
  export PATH="$HOME/.cargo/bin:$PATH"
  
  wallet_bin=""
  if command -v nockchain-wallet >/dev/null 2>&1; then
    wallet_bin="nockchain-wallet"
  elif [ -f "target/release/nockchain-wallet" ]; then
    wallet_bin="./target/release/nockchain-wallet"
  elif [ -f "target/debug/nockchain-wallet" ]; then
    wallet_bin="./target/debug/nockchain-wallet"
  fi
  
  if [ -z "$wallet_bin" ]; then
    echo -e "${RED}[-] æœªæ‰¾åˆ°é’±åŒ…ç¨‹åº${RESET}"
    pause_and_return
    return
  fi
  
  "$wallet_bin" export-keys
  echo -e "${GREEN}[+] å¯†é’¥å·²å¯¼å‡º${RESET}"
  pause_and_return
}

function import_keys() {
  echo -e "[*] å¯¼å…¥é’±åŒ…å¯†é’¥..."
  cd "$NCK_DIR" || return 1
  
  source "$HOME/.cargo/env" 2>/dev/null || true
  export PATH="$HOME/.cargo/bin:$PATH"
  
  wallet_bin=""
  if command -v nockchain-wallet >/dev/null 2>&1; then
    wallet_bin="nockchain-wallet"
  elif [ -f "target/release/nockchain-wallet" ]; then
    wallet_bin="./target/release/nockchain-wallet"
  elif [ -f "target/debug/nockchain-wallet" ]; then
    wallet_bin="./target/debug/nockchain-wallet"
  fi
  
  if [ -z "$wallet_bin" ]; then
    echo -e "${RED}[-] æœªæ‰¾åˆ°é’±åŒ…ç¨‹åº${RESET}"
    pause_and_return
    return
  fi
  
  read -p "å¯†é’¥æ–‡ä»¶è·¯å¾„ (é»˜è®¤: ./keys.export): " keyfile
  keyfile=${keyfile:-"./keys.export"}
  
  if [ -f "$keyfile" ]; then
    "$wallet_bin" import-keys --input "$keyfile"
    echo -e "${GREEN}[+] å¯†é’¥å·²å¯¼å…¥${RESET}"
  else
    echo -e "${RED}[-] æ–‡ä»¶ä¸å­˜åœ¨: $keyfile${RESET}"
  fi
  pause_and_return
}

function start_node() {
  echo -e "[*] å¯åŠ¨èŠ‚ç‚¹..."
  cd "$NCK_DIR" || return 1
  
  if [ ! -f "$ENV_FILE" ]; then
    echo -e "${RED}[-] .envæ–‡ä»¶ä¸å­˜åœ¨${RESET}"
    pause_and_return
    return
  fi
  
  source "$ENV_FILE"
  if [ -z "$MINING_PUBKEY" ]; then
    echo -e "${RED}[-] æœªè®¾ç½®æŒ–çŸ¿å…¬é’¥${RESET}"
    pause_and_return
    return
  fi

  source "$HOME/.cargo/env" 2>/dev/null || true
  export PATH="$HOME/.cargo/bin:$PATH"

  # æŸ¥æ‰¾èŠ‚ç‚¹ç¨‹åº
  node_bin=""
  if command -v nockchain >/dev/null 2>&1; then
    node_bin="nockchain"
  elif [ -f "target/release/nockchain" ]; then
    node_bin="./target/release/nockchain"
  elif [ -f "target/debug/nockchain" ]; then
    node_bin="./target/debug/nockchain"
  fi
  
  if [ -z "$node_bin" ]; then
    echo -e "${RED}[-] æœªæ‰¾åˆ°èŠ‚ç‚¹ç¨‹åº${RESET}"
    pause_and_return
    return
  fi

  echo -e "${GREEN}[+] ä½¿ç”¨èŠ‚ç‚¹: $node_bin${RESET}"

  # æ¸…ç†æ—§æ•°æ®
  rm -rf ./.data.nockchain .socket/nockchain_npc.sock 2>/dev/null || true
  mkdir -p .socket

  # å¯åŠ¨å‘½ä»¤
  start_cmd="RUST_LOG=info $node_bin --mining-pubkey $MINING_PUBKEY \
--mine \
--peer /ip4/95.216.102.60/udp/3006/quic-v1 \
--peer /ip4/65.109.156.108/udp/3006/quic-v1 \
--peer /ip4/65.21.67.175/udp/3006/quic-v1 \
--peer /ip4/65.109.156.172/udp/3006/quic-v1 \
--peer /ip4/34.174.22.166/udp/3006/quic-v1 \
--npc-socket .socket/nockchain.sock \
--bind /ip4/0.0.0.0/udp/3006/quic-v1"

  if ! command -v screen >/dev/null 2>&1; then
    echo -e "${YELLOW}[!] åå°å¯åŠ¨...${RESET}"
    nohup bash -c "$start_cmd" > nockchain.log 2>&1 &
    echo -e "${GREEN}[+] èŠ‚ç‚¹å·²åå°å¯åŠ¨${RESET}"
  else
    if screen -list | grep -qw "nockchain"; then
      screen -S nockchain -X quit >/dev/null 2>&1
      sleep 2
    fi

    screen -dmS nockchain bash -c "cd '$NCK_DIR' && $start_cmd"
    sleep 3
    
    if screen -list | grep -qw "nockchain"; then
      echo -e "${GREEN}[+] èŠ‚ç‚¹å·²å¯åŠ¨ (screen: nockchain)${RESET}"
      echo -e "${YELLOW}[!] ä½¿ç”¨ 'screen -r nockchain' æŸ¥çœ‹æ—¥å¿—${RESET}"
    else
      echo -e "${RED}[-] èŠ‚ç‚¹å¯åŠ¨å¤±è´¥${RESET}"
    fi
  fi
  
  pause_and_return
}

function view_logs() {
  if command -v screen >/dev/null 2>&1 && screen -list | grep -qw "nockchain"; then
    echo -e "${YELLOW}[!] è¿›å…¥æ—¥å¿—æŸ¥çœ‹ (Ctrl+A+D é€€å‡º)...${RESET}"
    screen -r nockchain
  elif [ -f "$NCK_DIR/nockchain.log" ]; then
    echo -e "${YELLOW}[!] æ˜¾ç¤ºæ—¥å¿—:${RESET}"
    tail -f "$NCK_DIR/nockchain.log"
  else
    echo -e "${RED}[-] æ— æ—¥å¿—æ–‡ä»¶${RESET}"
  fi
  pause_and_return
}

function check_status() {
  echo -e "[*] æ£€æŸ¥çŠ¶æ€..."
  
  cd "$NCK_DIR" || return 1
  if [ -f "$ENV_FILE" ]; then
    source "$ENV_FILE" >/dev/null 2>&1
    if [ -n "$MINING_PUBKEY" ]; then
      echo -e "${GREEN}[+] å…¬é’¥: ${MINING_PUBKEY:0:16}...${MINING_PUBKEY: -16}${RESET}"
    else
      echo -e "${YELLOW}[!] æœªè®¾ç½®å…¬é’¥${RESET}"
    fi
  fi
  
  if command -v screen >/dev/null 2>&1 && screen -list | grep -qw "nockchain"; then
    echo -e "${GREEN}[+] èŠ‚ç‚¹è¿è¡Œä¸­${RESET}"
  elif pgrep -f "nockchain" >/dev/null 2>&1; then
    echo -e "${GREEN}[+] èŠ‚ç‚¹è¿è¡Œä¸­${RESET}"
  else
    echo -e "${RED}[-] èŠ‚ç‚¹æœªè¿è¡Œ${RESET}"
  fi
  
  pause_and_return
}

function stop_node() {
  echo -e "[*] åœæ­¢èŠ‚ç‚¹..."
  
  if command -v screen >/dev/null 2>&1 && screen -list | grep -qw "nockchain"; then
    screen -S nockchain -X quit >/dev/null 2>&1
  fi
  
  if pgrep -f "nockchain" >/dev/null 2>&1; then
    pkill -f "nockchain" >/dev/null 2>&1
  fi
  
  sleep 2
  echo -e "${GREEN}[+] èŠ‚ç‚¹å·²åœæ­¢${RESET}"
  pause_and_return
}

function pause_and_return() {
  echo ""
  read -n1 -r -p "æŒ‰ä»»æ„é”®è¿”å›ä¸»èœå•..." key
  main_menu
}

function main_menu() {
  show_banner
  echo "è¯·é€‰æ‹©æ“ä½œ:"
  echo "  1) ğŸš€ Error 101ä¿®å¤å®‰è£…"
  echo "  2) ğŸ”‘ ç”Ÿæˆé’±åŒ…"
  echo "  3) ğŸ“ è®¾ç½®æŒ–çŸ¿å…¬é’¥"
  echo "  4) ğŸ’¾ å¯¼å‡ºå¯†é’¥"
  echo "  5) ğŸ“‚ å¯¼å…¥å¯†é’¥"
  echo "  6) âš¡ å¯åŠ¨èŠ‚ç‚¹"
  echo "  7) ğŸ“Š æŸ¥çœ‹æ—¥å¿—"
  echo "  8) ğŸ” æ£€æŸ¥çŠ¶æ€"
  echo "  9) â¹ï¸  åœæ­¢èŠ‚ç‚¹"
  echo "  0) é€€å‡º"
  echo ""
  echo -e "${BLUE}ğŸ’¡ ä¸“é—¨ä¿®å¤Error 101ç¼–è¯‘é—®é¢˜${RESET}"
  echo -e "${BLUE}ğŸ’¡ å®Œæ•´Cå·¥å…·é“¾ + å†…å­˜ä¼˜åŒ– + --lockedå‚æ•°${RESET}"
  echo ""
  read -p "è¯·è¾“å…¥ç¼–å·: " choice

  case "$choice" in
    1) setup_all ;;
    2) generate_wallet ;;
    3) set_pubkey_env ;;
    4) export_keys ;;
    5) import_keys ;;
    6) start_node ;;
    7) view_logs ;;
    8) check_status ;;
    9) stop_node ;;
    0) echo "é€€å‡ºè„šæœ¬."; exit 0 ;;
    *) echo -e "${RED}[-] æ— æ•ˆé€‰é¡¹${RESET}"; pause_and_return ;;
  esac
}

main_menu
