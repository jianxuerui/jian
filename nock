    echo -e "${YELLOW}â€¢ å¤šå±‚æ¬¡åŒ…ç®¡ç†ä¿®å¤ç­–ç•¥å’Œè¶…æ—¶ä¿æŠ¤${NC}"
    echo -e "${YELLOW}â€¢ æ™ºèƒ½è¿›ç¨‹å†²çªæ£€æµ‹å’Œé”æ–‡ä»¶æ¸…ç†${NC}"
