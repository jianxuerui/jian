# ========= é’±åŒ…å‡½æ•° =========

function check_wallet_executable() {
    if [[ ! -x "$NCK_DIR/target/release/nockchain-wallet" ]]; then
        echo -e "${RED}[-] é’±åŒ…å¯æ‰§è¡Œæ–‡ä»¶æœªæ‰¾åˆ°æˆ–æ— æ‰§è¡Œæƒé™ã€‚è¯·å…ˆè¿è¡Œ '1) ä¸€é”®å®‰è£…å¹¶æ„å»º'${RESET}"
        return 1
    fi
    return 0
}

function generate_wallet() {
  echo -e "${CYAN}[*] ç”Ÿæˆé’±åŒ…å¯†é’¥å¯¹...${RESET}"
  cd_nck_dir || { pause_and_return; return 1; }
  check_wallet_executable || { pause_and_return; return 1; }

  echo -e "${YELLOW}[!] æ­£åœ¨ç”Ÿæˆé’±åŒ…å¯†é’¥å¯¹ï¼Œè¯·è®°ä¸‹å…¬é’¥ (pubkey)!${RESET}"
  echo "-----------------------------------------------"
  "$NCK_DIR/target/release/nockchain-wallet" keygen
  local status=$?
  echo "-----------------------------------------------"

  if [[ $status -eq 0 ]]; then
    echo -e "${GREEN}[+] é’±åŒ…å¯†é’¥å¯¹ç”Ÿæˆå®Œæˆã€‚${RESET}"
    echo -e "${YELLOW}è¯·å°†ä¸Šé¢è¾“å‡ºçš„å…¬é’¥æ‰‹åŠ¨å¤åˆ¶ï¼Œå¹¶è¿è¡Œ '3) è®¾ç½® MINING_PUBKEY' æ¥é…ç½®æŒ–çŸ¿åœ°å€ã€‚${RESET}"
  else
    echo -e "${RED}[-] é’±åŒ…å¯†é’¥ç”Ÿæˆå¤±è´¥${RESET}"
  fi

  pause_and_return
}

function set_pubkey_env() {
  echo -e "${CYAN}[*] è®¾ç½® MINING_PUBKEY åˆ° .env...${RESET}"
  cd_nck_dir || { pause_and_return; return 1; }

  if [[ ! -f "$ENV_FILE" ]]; then
      echo -e "${RED}[-] é”™è¯¯: .env æ–‡ä»¶ä¸å­˜åœ¨ã€‚è¯·å…ˆè¿è¡Œ '1) ä¸€é”®å®‰è£…å¹¶æ„å»º'${RESET}"
      pause_and_return
      return 1
  fi

  read -p "è¯·è¾“å…¥ä½ çš„ Nockchain å…¬é’¥ (pubkey): " pubkey
  if [[ -z "$pubkey" ]]; then
    echo -e "${RED}[-] é”™è¯¯: å…¬é’¥ä¸èƒ½ä¸ºç©º${RESET}"
    pause_and_return
    return 1
  fi

  update_env "MINING_PUBKEY" "$pubkey" || { pause_and_return; return 1; }
  echo -e "${GREEN}[+] MINING_PUBKEY å·²æ›´æ–°ä¸º $pubkey${RESET}"
  pause_and_return
}

function export_keys() {
  echo -e "${CYAN}[*] å¯¼å‡ºé’±åŒ…å¯†é’¥...${RESET}"
  cd_nck_dir || { pause_and_return; return 1; }
  check_wallet_executable || { pause_and_return; return 1; }

  echo -e "${YELLOW}[!] å¯†é’¥å°†å¯¼å‡ºåˆ° ./keys.export æ–‡ä»¶ã€‚è¯·å¦¥å–„ä¿ç®¡ï¼${RESET}"
  "$NCK_DIR/target/release/nockchain-wallet" export-keys
  local status=$?
  if [[ $status -eq 0 ]]; then
      echo -e "${GREEN}[+] å¯†é’¥å·²æˆåŠŸå¯¼å‡ºåˆ° $NCK_DIR/keys.export${RESET}"
  else
      echo -e "${RED}[-] å¯†é’¥å¯¼å‡ºå¤±è´¥${RESET}"
  fi

  pause_and_return
}

function import_keys() {
  echo -e "${CYAN}[*] å¯¼å…¥é’±åŒ…å¯†é’¥...${RESET}"
  cd_nck_dir || { pause_and_return; return 1; }
  check_wallet_executable || { pause_and_return; return 1; }


  read -p "[?] è¯·è¾“å…¥è¦å¯¼å…¥çš„å¯†é’¥æ–‡ä»¶è·¯å¾„ (é»˜è®¤: $NCK_DIR/keys.export): " keyfile
  local keyfile_path=${keyfile:-"$NCK_DIR/keys.export"}

  if [[ ! -f "$keyfile_path" ]]; then
      echo -e "${RED}[-] é”™è¯¯: å¯†é’¥æ–‡ä»¶ '$keyfile_path' ä¸å­˜åœ¨${RESET}"
      pause_and_return
      return 1
  fi

  echo -e "${YELLOW}[!] æ­£åœ¨å¯¼å…¥å¯†é’¥...${RESET}"
  "$NCK_DIR/target/release/nockchain-wallet" import-keys --input "$keyfile_path"
  local status=$?
  if [[ $status -eq 0 ]]; then
      echo -e "${GREEN}[+] å¯†é’¥å·²æˆåŠŸå¯¼å…¥${RESET}"
  else
      echo -e "${RED}[-] å¯†é’¥å¯¼å…¥å¤±è´¥${RESET}"
  fi

  pause_and_return
}

# ========= èŠ‚ç‚¹ç®¡ç†å‡½æ•° =========

# é…ç½®æŒ–çŸ¿çº¿ç¨‹æ•°
function configure_mining_threads() {
    echo -e "${CYAN}[*] é…ç½®æŒ–çŸ¿çº¿ç¨‹æ•°...${RESET}"
    cd_nck_dir || { pause_and_return; return 1; } # Ensure .env is accessible

    if [[ ! -f "$ENV_FILE" ]]; then
        echo -e "${RED}[-] é”™è¯¯: .env æ–‡ä»¶ä¸å­˜åœ¨ã€‚è¯·å…ˆè¿è¡Œ '1) ä¸€é”®å®‰è£…å¹¶æ„å»º'${RESET}"
        pause_and_return
        return 1
    fi

    local current_threads=$(get_env "MINING_THREADS")
    local num_cores=$(get_num_cores)

    if [[ -z "$current_threads" ]]; then
         echo -e "å½“å‰é…ç½®çš„æŒ–çŸ¿çº¿ç¨‹æ•°: ${YELLOW}æœªè®¾ç½®${RESET} (å»ºè®®ä½¿ç”¨æ ¸å¿ƒæ•° $num_cores)"
    else
        echo -e "å½“å‰é…ç½®çš„æŒ–çŸ¿çº¿ç¨‹æ•°: ${YELLOW}$current_threads${RESET}"
    fi
    echo -e "ç³»ç»Ÿæ£€æµ‹åˆ°çš„æ ¸å¿ƒæ•°: ${GREEN}$num_cores${RESET}"

    read -p "è¯·è¾“å…¥æ–°çš„æŒ–çŸ¿çº¿ç¨‹æ•° (ç•™ç©ºä½¿ç”¨å½“å‰å€¼æˆ–é»˜è®¤ $num_cores): " new_threads

    if [[ -z "$new_threads" ]]; then
        if [[ -z "$current_threads" ]]; then
             echo -e "${YELLOW}[*] æœªè¾“å…¥æ–°çº¿ç¨‹æ•°ï¼Œä¸” .env æœªè®¾ç½®ï¼Œå°†ä½¿ç”¨é»˜è®¤æ ¸å¿ƒæ•° ($num_cores)${RESET}"
             new_threads="$num_cores"
        else
            echo -e "${YELLOW}[*] æœªè¾“å…¥æ–°çº¿ç¨‹æ•°ï¼Œä¿æŒå½“å‰é…ç½® $current_threads${RESET}"
            # No need to update if input is empty and current is set
            pause_and_return
            return 0
        fi
    fi

    # æ ¡éªŒè¾“å…¥æ˜¯å¦ä¸ºæ­£æ•´æ•°
    if [[ "$new_threads" =~ ^[1-9][0-9]*$ ]]; then
        update_env "MINING_THREADS" "$new_threads" || { pause_and_return; return 1; }
        echo -e "${GREEN}[+] æŒ–çŸ¿çº¿ç¨‹æ•°å·²æ›´æ–°ä¸º $new_threads${RESET}"
    else
        echo -e "${RED}[-] è¾“å…¥æ— æ•ˆï¼Œçº¿ç¨‹æ•°å¿…é¡»æ˜¯æ­£æ•´æ•°ã€‚${RESET}"
    fi
    pause_and_return
}

function check_node_executable() {
    if [[ ! -x "$NCK_DIR/target/release/nockchain" ]]; then
        echo -e "${RED}[-] èŠ‚ç‚¹å¯æ‰§è¡Œæ–‡ä»¶æœªæ‰¾åˆ°æˆ–æ— æ‰§è¡Œæƒé™ã€‚è¯·å…ˆè¿è¡Œ '1) ä¸€é”®å®‰è£…å¹¶æ„å»º'${RESET}"
        return 1
    fi
    return 0
}

function start_node() {
  echo -e "${CYAN}[*] å¯åŠ¨èŠ‚ç‚¹ (screen)...${RESET}"
  cd_nck_dir || { if [ "$RUN_ONE_LINER_MODE" = true ]; then exit 1; else pause_and_return; return 1; fi }
  check_node_executable || { if [ "$RUN_ONE_LINER_MODE" = true ]; then exit 1; else pause_and_return; return 1; fi }

  # Determine MINING_PUBKEY (parameter overrides .env)
  local mining_pubkey=""
  if [[ -n "$PUBKEY_ARG" ]]; then
      mining_pubkey="$PUBKEY_ARG"
      echo -e "${YELLOW}[*] ä½¿ç”¨å‘½ä»¤è¡Œå‚æ•°æŒ‡å®šçš„ MINING_PUBKEY${RESET}"
  else
      mining_pubkey=$(get_env "MINING_PUBKEY")
      echo -e "${YELLOW}[*] ä½¿ç”¨ .env æ–‡ä»¶ä¸­é…ç½®çš„ MINING_PUBKEY${RESET}"
  fi

  if [[ -z "$mining_pubkey" ]]; then
    echo -e "${RED}[-] é”™è¯¯: MINING_PUBKEY æœªè®¾ç½®ã€‚è¯·é€šè¿‡ -p å‚æ•°æä¾›ï¼Œæˆ–åœ¨ .env æ–‡ä»¶ä¸­è®¾ç½®ï¼ˆè¿è¡Œé€‰é¡¹ 3ï¼‰ã€‚${RESET}"
    if [ "$RUN_ONE_LINER_MODE" = true ]; then exit 1; else pause_and_return; return 1; fi
  fi

  # Determine MINING_THREADS (parameter overrides .env, default to nproc)
  local mining_threads=""
  if [[ -n "$THREADS_ARG" ]]; then
      mining_threads="$THREADS_ARG"
      echo -e "${YELLOW}[*] ä½¿ç”¨å‘½ä»¤è¡Œå‚æ•°æŒ‡å®šçš„æŒ–çŸ¿çº¿ç¨‹æ•°: $mining_threads${RESET}"
  else
      mining_threads=$(get_env "MINING_THREADS")
       if [[ -z "$mining_threads" || ! "$mining_threads" =~ ^[1-9][0-9]*$ ]]; then
            local num_cores=$(get_num_cores)
            echo -e "${YELLOW}[*] MINING_THREADS æœªåœ¨ .env ä¸­è®¾ç½®æˆ–æ— æ•ˆï¼Œä½¿ç”¨ç³»ç»Ÿæ ¸å¿ƒæ•° ($num_cores) ä½œä¸ºé»˜è®¤å€¼${RESET}"
            mining_threads="$num_cores"
       else
            echo -e "${YELLOW}[*] ä½¿ç”¨ .env æ–‡ä»¶ä¸­é…ç½®çš„æŒ–çŸ¿çº¿ç¨‹æ•°: $mining_threads${RESET}"
       fi
  fi

  if [[ ! "$mining_threads" =~ ^[1-9][0-9]*$ ]]; then
      echo -e "${RED}[-] é”™è¯¯: æ— æ•ˆçš„æŒ–çŸ¿çº¿ç¨‹æ•° '$mining_threads'${RESET}"
      if [ "$RUN_ONE_LINER_MODE" = true ]; then exit 1; else pause_and_return; return 1; fi
  fi


  echo -e "${CYAN}[*] ä½¿ç”¨ä»¥ä¸‹å‚æ•°å¯åŠ¨èŠ‚ç‚¹:${RESET}"
  echo -e "  MINING_PUBKEY: ${YELLOW}$mining_pubkey${RESET}"
  echo -e "  THREADS:       ${YELLOW}$mining_threads${RESET}"
  echo -e "  Log File:      ${CYAN}$LOG_FILE${RESET}"

  # Check and terminate old screen session
  if screen -list | grep -qw "nockchain"; then
    echo -e "${YELLOW}[*] æ£€æµ‹åˆ°æ—§çš„ screen ä¼šè¯ 'nockchain'ï¼Œæ­£åœ¨å…³é—­...${RESET}"
    screen -S nockchain -X quit || true # Use || true so script doesn't exit if screen quit fails initially
    # Give it a moment to terminate
    sleep 2
    if screen -list | grep -qw "nockchain"; then
        echo -e "${RED}[-] æ— æ³•ç»ˆæ­¢æ—§çš„ screen ä¼šè¯ï¼Œè¯·æ‰‹åŠ¨æ‰§è¡Œ 'screen -S nockchain -X quit' æˆ– 'killall screen'${RESET}"
        if [ "$RUN_ONE_LINER_MODE" = true ]; then exit 1; else pause_and_return; return 1; fi
    fi
    echo -e "${GREEN}[+] æ—§çš„ screen ä¼šè¯å·²å…³é—­${RESET}"
  fi

  # Clear previous log file if exists
  if [[ -f "$LOG_FILE" ]]; then
      echo -e "${YELLOW}[*] æ¸…é™¤æ—§æ—¥å¿—æ–‡ä»¶ $LOG_FILE ...${RESET}"
      rm -f "$LOG_FILE"
  fi

  # Create parent directory for log file if it doesn't exist
  mkdir -p "$(dirname "$LOG_FILE")"

  # Construct the command to run inside screen
  # Source .env to load other potential config, export MINING vars, then run node with threads.
  # Redirect stdout and stderr to tee to log file and screen.
  local screen_cmd="cd \"$NCK_DIR\" && \
source \"$ENV_FILE\" 2>/dev/null; \
export MINING_PUBKEY=\"$mining_pubkey\"; \
export MINING_THREADS=\"$mining_threads\"; \
echo -e \"${GREEN}>>> èŠ‚ç‚¹æ­£åœ¨å¯åŠ¨ï¼Œä½¿ç”¨å…¬é’¥: \${MINING_PUBKEY}, çº¿ç¨‹: \${MINING_THREADS}${RESET}\"; \
exec ./target/release/nockchain --threads \"\$MINING_THREADS\" 2>&1 | tee \"$LOG_FILE\""
# Using 'exec' replaces the current shell process with the miner process, which can sometimes help screen signal handling.

  echo -e "${CYAN}[*] å¯åŠ¨æ–°çš„ screen ä¼šè¯ 'nockchain'...${RESET}"

  # Start new screen session
  # screen -dmS <session_name> <command>
  screen -dmS nockchain bash -c "$screen_cmd"

  # Give screen a moment to start and run the command
  sleep 3

  # Check if the screen session is running
  if screen -list | grep -qw "nockchain"; then
    echo -e "${GREEN}===============================================${RESET}"
    echo -e "${GREEN}         âœ… èŠ‚ç‚¹å·²åœ¨ screen åå°å¯åŠ¨ âœ…         ${RESET}"
    echo -e "${GREEN}===============================================${RESET}"
    if [ "$RUN_ONE_LINER_MODE" = false ]; then # Only show screen commands in interactive mode
        echo -e "å¯ä»¥ä½¿ç”¨ '${YELLOW}screen -r nockchain${RESET}' è¿›å…¥ä¼šè¯æŸ¥çœ‹å®æ—¶è¾“å‡ºã€‚"
        echo -e "ä¼šè¯å†…æŒ‰ '${YELLOW}Ctrl+A ç„¶åæŒ‰ D${RESET}' å¯é€€å‡º screen ä¼šè¯å¹¶ä¿æŒèŠ‚ç‚¹è¿è¡Œã€‚"
    fi
    echo -e "æ—¥å¿—æ–‡ä»¶è·¯å¾„: ${CYAN}$LOG_FILE${RESET}"
    echo -e "å¯ä»¥ä½¿ç”¨é€‰é¡¹ ${YELLOW}9) æŸ¥çœ‹èŠ‚ç‚¹æ—¥å¿—æ–‡ä»¶${RESET} æ¥å®æ—¶è·Ÿè¸ªæ—¥å¿—ã€‚"
  else
    echo -e "${RED}===============================================${RESET}"
    echo -e "${RED}         âŒ èŠ‚ç‚¹å¯åŠ¨å¤±è´¥ âŒ         ${RESET}"
    echo -e "${RED}===============================================${RESET}"
    echo -e "è¯·å°è¯•æŸ¥çœ‹æ—¥å¿—æ–‡ä»¶ ${CYAN}$LOG_FILE${RESET} æˆ–æ‰‹åŠ¨è¿è¡Œå‘½ä»¤è¿›è¡Œè°ƒè¯•:"
    echo -e "${YELLOW}  cd $NCK_DIR && source \"$ENV_FILE\" && export MINING_PUBKEY=\"$mining_pubkey\" && export MINING_THREADS=\"$mining_threads\" && ./target/release/nockchain --threads \"\$MINING_THREADS\"${RESET}"
    # Attempt to show any output from the screen session if it exited quickly
    if [[ -f "$LOG_FILE" ]]; then
        echo -e "${YELLOW}--- æœ€è¿‘çš„æ—¥å¿—æ–‡ä»¶å†…å®¹ ---${RESET}"
        tail "$LOG_FILE" || true
        echo -e "${YELLOW}-------------------------${RESET}"
    fi

    if [ "$RUN_ONE_LINER_MODE" = true ]; then exit 1; else pause_and_return; return 1; fi
  fi

  if [ "$RUN_ONE_LINER_MODE" = false ]; then
      pause_and_return
  fi
  return 0
}

function view_screen_logs() {
  echo -e "${CYAN}[*] æŸ¥çœ‹ screen ä¼šè¯ 'nockchain' çš„å®æ—¶è¾“å‡º...${RESET}"
  if screen -list | grep -qw "nockchain"; then
    echo -e "${YELLOW}[!] æ­£åœ¨è¿›å…¥ screen ä¼šè¯ (Ctrl+A ç„¶åæŒ‰ D å¯é€€å‡º)...${RESET}"
    # Attempt to attach to screen session
    screen -r nockchain || echo -e "${RED}[-] æ— æ³•é™„åŠ åˆ° screen ä¼šè¯ã€‚å¯èƒ½æ˜¯æƒé™é—®é¢˜ã€ä¼šè¯çŠ¶æ€å¼‚å¸¸æˆ–ä¼šè¯å·²é€€å‡ºã€‚${RESET}"
  else
    echo -e "${RED}[-] èŠ‚ç‚¹æœªåœ¨ screen ä¼šè¯ 'nockchain' ä¸­è¿è¡Œã€‚è¯·å…ˆå¯åŠ¨èŠ‚ç‚¹ (é€‰é¡¹ 7)ã€‚${RESET}"
  fi
  pause_and_return
}

function view_log_file() {
    echo -e "${CYAN}[*] å®æ—¶æŸ¥çœ‹èŠ‚ç‚¹æ—¥å¿—æ–‡ä»¶ $LOG_FILE ...${RESET}"
    if [[ -f "$LOG_FILE" ]]; then
        echo -e "${YELLOW}[!] æ­£åœ¨ tail -f æ—¥å¿—æ–‡ä»¶ (Ctrl+C é€€å‡º)...${RESET}"
        tail -f "$LOG_FILE" || { echo -e "${RED}[-] tail -f å‘½ä»¤å¤±è´¥${RESET}"; } # Catch tail errors
    else
        echo -e "${RED}[-] æ—¥å¿—æ–‡ä»¶ '$LOG_FILE' ä¸å­˜åœ¨ã€‚è¯·ç¡®ä¿èŠ‚ç‚¹å·²ç»è¿è¡Œè¿‡ (é€‰é¡¹ 7)ã€‚${RESET}"
    fi
    pause_and_return
}


function stop_node() {
    echo -e "${CYAN}[*] åœæ­¢èŠ‚ç‚¹ screen ä¼šè¯...${RESET}"
    if screen -list | grep -qw "nockchain"; then
        echo -e "${YELLOW}[*] æ£€æµ‹åˆ° screen ä¼šè¯ 'nockchain'ï¼Œæ­£åœ¨å°è¯•ä¼˜é›…å…³é—­...${RESET}"
        # Send Ctrl+C to the screen session
        screen -S nockchain -X stuff "^C"
        # Give it a moment to terminate gracefully
        sleep 5
        if screen -list | grep -qw "nockchain"; then
             echo -e "${YELLOW}[*] èŠ‚ç‚¹æœªä¼˜é›…é€€å‡ºï¼Œå°è¯•å¼ºåˆ¶ç»ˆæ­¢ screen ä¼šè¯...${RESET}"
            screen -S nockchain -X quit || true # Don't exit script if quit fails
             sleep 2 # Give it another moment
             if screen -list | grep -qw "nockchain"; then
                 echo -e "${RED}[-] é”™è¯¯: æ— æ³•ç»ˆæ­¢ screen ä¼šè¯ 'nockchain'ã€‚è¯·æ‰‹åŠ¨æ‰§è¡Œ 'screen -S nockchain -X quit' æˆ– 'killall screen'${RESET}"
                 if [ "$RUN_ONE_LINER_MODE" = true ]; then exit 1; fi # In one-liner mode, fail here
             else
                 echo -e "${GREEN}[+] screen ä¼šè¯ 'nockchain' å·²å¼ºåˆ¶åœæ­¢${RESET}"
             fi
        else
            echo -e "${GREEN}[+] screen ä¼šè¯ 'nockchain' å·²ä¼˜é›…åœæ­¢${RESET}"
        fi
    else
        echo -e "${YELLOW}[*] screen ä¼šè¯ 'nockchain' æœªè¿è¡Œ${RESET}"
    fi
    if [ "$RUN_ONE_LINER_MODE" = false ]; then
        pause_and_return
    fi
    return 0
}


# ========= ä¸»èœå• =========
function main_menu() {
  while true; do
    show_banner
    echo -e "${BOLD}è¯·é€‰æ‹©æ“ä½œ:${RESET}"
    echo -e "  ${GREEN}1) ä¸€é”®å®‰è£…å¹¶æ„å»º${RESET}"
    echo -e "  ${BLUE}2) ç”Ÿæˆé’±åŒ…å¯†é’¥å¯¹å¹¶æ˜¾ç¤º (è¯·è®°å½•å…¬é’¥)${RESET}"
    echo -e "  ${BLUE}3) è®¾ç½® MINING_PUBKEY åˆ° .env${RESET}"
    echo -e "  ${BLUE}4) å¯¼å‡ºé’±åŒ…å¯†é’¥åˆ°æ–‡ä»¶${RESET}"
    echo -e "  ${BLUE}5) ä»æ–‡ä»¶å¯¼å…¥é’±åŒ…å¯†é’¥${RESET}"
    echo -e "  ${YELLOW}6) é…ç½®æŒ–çŸ¿çº¿ç¨‹æ•° (MINING_THREADS)${RESET}"
    echo -e "  ${CYAN}7) å¯åŠ¨èŠ‚ç‚¹ (åœ¨ screen åå°è¿è¡Œ)${RESET}"
    echo -e "  ${CYAN}8) æŸ¥çœ‹èŠ‚ç‚¹ screen å®æ—¶è¾“å‡º (è¿›å…¥ä¼šè¯)${RESET}"
    echo -e "  ${CYAN}9) æŸ¥çœ‹èŠ‚ç‚¹æ—¥å¿—æ–‡ä»¶ (tail -f)${RESET}"
    echo -e "  ${RED}10) åœæ­¢èŠ‚ç‚¹${RESET}"
    echo -e "  ${RED}0) é€€å‡ºè„šæœ¬${RESET}"
    echo ""
    read -p "${BOLD}è¯·è¾“å…¥ç¼–å·: ${RESET}" choice

    case "$choice" in
      1) setup_all ;;
      2) generate_wallet ;;
      3) set_pubkey_env ;;
      4) export_keys ;;
      5) import_keys ;;
      6) configure_mining_threads ;;
      7) start_node ;;
      8) view_screen_logs ;;
      9) view_log_file ;;
      10) stop_node ;;
      0) echo -e "${YELLOW}é€€å‡ºè„šæœ¬.${RESET}"; exit 0 ;;
      *) echo -e "${RED}[-] æ— æ•ˆé€‰é¡¹ï¼Œè¯·é‡æ–°è¾“å…¥${RESET}" ;;
    esac
  done
}

# ========= å‚æ•°è§£æ =========
# Parse command line arguments
while getopts "t:p:" opt; do
  case $opt in
    t)
      THREADS_ARG="$OPTARG"
      RUN_ONE_LINER_MODE=true
      ;;
    p)
      PUBKEY_ARG="$OPTARG"
      RUN_ONE_LINER_MODE=true
      ;;
    \?) # Invalid option
      echo -e "${RED}æ— æ•ˆé€‰é¡¹: -$OPTARG${RESET}" >&2
      echo -e "${YELLOW}ç”¨æ³•: $0 [-t çº¿ç¨‹æ•°] [-p ä½ çš„å…¬é’¥]${RESET}" >&2
      exit 1
      ;;
    :) # Option requires an argument
      echo -e "${RED}é€‰é¡¹ -$OPTARG éœ€è¦ä¸€ä¸ªå‚æ•°${RESET}" >&2
      echo -e "${YELLOW}ç”¨æ³•: $0 [-t çº¿ç¨‹æ•°] [-p ä½ çš„å…¬é’¥]${RESET}" >&2
      exit 1
      ;;
  esac
done
shift $((OPTIND-1)) # Remove the options from the positional parameters

# ========= è„šæœ¬å…¥å£ =========

# ç¡®ä¿ä¾èµ–å‘½ä»¤å¯ç”¨
echo -e "${CYAN}[*] æ£€æŸ¥ç³»ç»Ÿä¾èµ–å‘½ä»¤...${RESET}"
if ! command_exists screen; then
    echo -e "${RED}é”™è¯¯: screen å‘½ä»¤æœªæ‰¾åˆ°ã€‚è¯·å…ˆå®‰è£…: sudo apt update && sudo apt install screen${RESET}"
    exit 1
fi

# Check for at least one download utility
if ! command_exists wget && ! command_exists curl; then
    echo -e "${RED}é”™è¯¯: wget æˆ– curl å‘½ä»¤æœªæ‰¾åˆ°ã€‚Rust å®‰è£…éœ€è¦å…¶ä¸­ä¸€ä¸ªã€‚è¯·å…ˆå®‰è£…ã€‚${RESET}"
    exit 1
fi

# Ensure nproc command is available or provide fallback warning
if ! command_exists nproc; then
    echo -e "${YELLOW}è­¦å‘Š: nproc å‘½ä»¤æœªæ‰¾åˆ°ï¼Œæ— æ³•è‡ªåŠ¨æ£€æµ‹æ ¸å¿ƒæ•°ã€‚é»˜è®¤æŒ–çŸ¿çº¿ç¨‹æ•°å°†è®¾ç½®ä¸º 1ã€‚${RESET}"
    # get_num_cores function handles the fallback
fi
echo -e "${GREEN}[+] ä¾èµ–å‘½ä»¤æ£€æŸ¥å®Œæˆ${RESET}"


# If running in one-liner mode (parameters were provided)
if [ "$RUN_ONE_LINER_MODE" = true ]; then
    show_banner # Still show banner for clarity in one-liner output
    echo -e "${CYAN}===============================================${RESET}"
    echo -e "${CYAN}         âš™ï¸  ä¸€é”®å®‰è£…å¹¶å¯åŠ¨æ¨¡å¼ âš™ï¸         ${RESET}"
    echo -e "${CYAN}===============================================${RESET}"

    # Execute setup
    setup_all || { echo -e "${RED}[-] ä¸€é”®æ¨¡å¼: å®‰è£…æ„å»ºå¤±è´¥${RESET}"; exit 1; }

    # If parameters were provided, update .env *after* setup_all created it (if it didn't exist)
    # cd into dir before updating env
    cd_nck_dir || { echo -e "${RED}[-] ä¸€é”®æ¨¡å¼: æ— æ³•è¿›å…¥é¡¹ç›®ç›®å½•ä»¥æ›´æ–° .env${RESET}"; exit 1; }

    if [[ -n "$THREADS_ARG" ]]; then
         echo -e "${CYAN}[*] æ ¹æ®å‚æ•°è®¾ç½® MINING_THREADS=${THREADS_ARG} åˆ° .env...${RESET}"
        update_env "MINING_THREADS" "$THREADS_ARG" || { echo -e "${RED}[-] ä¸€é”®æ¨¡å¼: è®¾ç½®çº¿ç¨‹æ•°å¤±è´¥${RESET}"; exit 1; }
    fi
    if [[ -n "$PUBKEY_ARG" ]]; then
        echo -e "${CYAN}[*] æ ¹æ®å‚æ•°è®¾ç½® MINING_PUBKEY=${PUBKEY_ARG} åˆ° .env...${RESET}"
        update_env "MINING_PUBKEY" "$PUBKEY_ARG" || { echo -e "${RED}[-] ä¸€é”®æ¨¡å¼: è®¾ç½®å…¬é’¥å¤±è´¥${RESET}"; exit 1; }
    fi

    # Start the node
    start_node || { echo -e "${RED}[-] ä¸€é”®æ¨¡å¼: èŠ‚ç‚¹å¯åŠ¨å¤±è´¥${RESET}"; exit 1; }

    echo -e "${GREEN}===============================================${RESET}"
    echo -e "${GREEN}         ğŸ‰ ä¸€é”®å®‰è£…å’Œå¯åŠ¨æµç¨‹å®Œæˆ! ğŸ‰         ${RESET}"
    echo -e "${GREEN}===============================================${RESET}"
    echo -e "èŠ‚ç‚¹å·²åœ¨ screen åå°å¯åŠ¨ï¼Œæ—¥å¿—æ–‡ä»¶: ${CYAN}$LOG_FILE${RESET}"
    echo -e "ä½¿ç”¨å‘½ä»¤ '${YELLOW}screen -r nockchain${RESET}' æŸ¥çœ‹å®æ—¶è¾“å‡º (Ctrl+A D é€€å‡º)."
    echo -e "æˆ–ä½¿ç”¨ '${YELLOW}tail -f $LOG_FILE${RESET}' æŸ¥çœ‹æ—¥å¿—æ–‡ä»¶."
    echo -e "ä½¿ç”¨ '${YELLOW}$0 10${RESET}' åœæ­¢èŠ‚ç‚¹."

    exit 0 # Exit after completion in one-liner mode
else
    # If no parameters, show the main menu
    main_menu
fi
