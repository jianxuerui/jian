  echo -e "${YELLOW}[!] æ‚¨å¯ä»¥ä½¿ç”¨ä»¥ä¸‹å‘½ä»¤ç®¡ç†æœåŠ¡:${RESET}"
  echo -e "${YELLOW}    å¯åŠ¨çŸ¿æœº: ${BOLD}sudo systemctl start nockchain-miner${RESET}"
