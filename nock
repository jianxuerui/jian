  echo -e "${GREEN}[+] hoonc å®‰è£…å®Œæˆ${RESET}"

  echo -e "${CYAN}[*] ç¼–è¯‘ Nockchain (ä½¿ç”¨ $(get_num_cores) æ ¸å¿ƒ: make -j $(get_num_cores))...${RESET}"
