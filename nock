    echo -e "${GREEN}[+] å·²æ·»åŠ  Cargo è·¯å¾„åˆ° $rc_file${RESET}. æ‚¨å¯èƒ½éœ€è¦é‡æ–°ç™»å½•æˆ–æ‰§è¡Œ 'source $rc_file'.${RESET}"
  #else # Avoid excessive output in one-liner
     #echo -e "${YELLOW}[*] Cargo è·¯å¾„å·²å­˜åœ¨äº $rc_file${RESET}"
  fi
  # Immediately update current shell's PATH
  export PATH="$HOME/.cargo/bin:$PATH"

  echo -e "${CYAN}[*] è·å–æˆ–æ›´æ–°ä»“åº“...${RESET}"
  if [[ -d "$NCK_DIR" ]]; then
    echo -e "${YELLOW}[*] é¡¹ç›®ç›®å½•å·²å­˜åœ¨ ($NCK_DIR)ï¼Œå°è¯•æ›´æ–°...${RESET}"
    cd_nck_dir || { if [ "$RUN_ONE_LINER_MODE" = true ]; then exit 1; else return 1; fi }
    git pull || { echo -e "${RED}[-] é”™è¯¯: git pull å¤±è´¥${RESET}"; if [ "$RUN_ONE_LINER_MODE" = true ]; then exit 1; else return 1; fi }
  else
    echo -e "${YELLOW}[*] å…‹éš†æ–°ä»“åº“åˆ° $NCK_DIR...${RESET}"
    git clone https://github.com/zorp-corp/nockchain "$NCK_DIR" || { echo -e "${RED}[-] é”™è¯¯: git clone å¤±è´¥${RESET}"; if [ "$RUN_ONE_LINER_MODE" = true ]; then exit 1; else return 1; fi }
    cd_nck_dir || { if [ "$RUN_ONE_LINER_MODE" = true ]; then exit 1; else return 1; fi }
  fi
  echo -e "${GREEN}[+] ä»“åº“å‡†å¤‡å°±ç»ª${RESET}"

  echo -e "${CYAN}[*] è®¾ç½® .env æ–‡ä»¶...${RESET}"
  cd_nck_dir || { if [ "$RUN_ONE_LINER_MODE" = true ]; then exit 1; else return 1; fi }
  if [[ ! -f "$ENV_FILE" ]]; then
      if [[ -f ".env_example" ]]; then
          cp ".env_example" "$ENV_FILE" || { echo -e "${RED}[-] é”™è¯¯: å¤åˆ¶ .env_example å¤±è´¥${RESET}"; if [ "$RUN_ONE_LINER_MODE" = true ]; then exit 1; else return 1; fi }
          echo -e "${GREEN}[+] .env æ–‡ä»¶å·²åŸºäº .env_example åˆ›å»º${RESET}"
      else
          echo -e "${RED}[-] é”™è¯¯: .env_example æ–‡ä»¶ä¸å­˜åœ¨ï¼Œæ— æ³•åˆ›å»º .env${RESET}"
          if [ "$RUN_ONE_LINER_MODE" = true ]; then exit 1; else return 1; fi
      fi
  else
      echo -e "${YELLOW}[*] .env æ–‡ä»¶å·²å­˜åœ¨ï¼Œè·³è¿‡åˆ›å»º${RESET}"
  fi

  # æ£€æŸ¥å¹¶è®¾ç½®é»˜è®¤æŒ–çŸ¿çº¿ç¨‹æ•° (å¦‚æœæœªè®¾ç½®ä¸”å‘½ä»¤è¡Œæœªæä¾›)
  local current_threads=$(get_env "MINING_THREADS")
  local num_cores=$(get_num_cores)

  if [[ -z "$THREADS_ARG" && -z "$current_threads" ]]; then
      echo -e "${YELLOW}[*] MINING_THREADS æœªè®¾ç½®ä¸”æœªé€šè¿‡å‚æ•°æŒ‡å®šï¼Œè‡ªåŠ¨è®¾ç½®ä¸ºæ ¸å¿ƒæ•° ($num_cores)...${RESET}"
      update_env "MINING_THREADS" "$num_cores" || { if [ "$RUN_ONE_LINER_MODE" = true ]; then exit 1; else return 1; fi }
  elif [[ -z "$THREADS_ARG" && -n "$current_threads" ]]; then # å¦‚æœå‘½ä»¤è¡Œæœªæä¾›ï¼Œä½† .env å·²æœ‰
      echo -e "${YELLOW}[*] MINING_THREADS å·²åœ¨ .env ä¸­è®¾ç½®ä¸º $current_threads${RESET}"
  elif [[ -n "$THREADS_ARG" ]]; then
      # å¦‚æœå‘½ä»¤è¡Œæä¾›äº† THREADS_ARGï¼Œå°†åœ¨ä¸»é€»è¾‘ä¸­æ›´æ–° .envï¼Œè¿™é‡Œåªæç¤º
      echo -e "${YELLOW}[*] æ£€æµ‹åˆ°å‘½ä»¤è¡Œå‚æ•° -t $THREADS_ARG, å°†è¦†ç›– .env ä¸­çš„ MINING_THREADS${RESET}"
