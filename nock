#!/bin/bash
# Nockchain Ecosystem Builder v2.4
# 集成内核代码构建、节点部署、动态资源调度和生态监控功能
set -xeuo pipefail
exec > >(tee /var/log/nockchain-builder.log) 2>&1

# 若要跳过 CPU 特性检查，运行前设置： export SKIP_CPU_CHECK=1
SKIP_CPU_CHECK=${SKIP_CPU_CHECK:-0}

# 初始化环境配置
export LC_ALL=C.UTF-8
export RUSTUP_HOME=/opt/rustup
export CARGO_HOME=/opt/cargo
PATH="$CARGO_HOME/bin:$PATH"

# Color Variables
green='\e[32m'; blue='\e[34m'; red='\e[31m'; reset='\e[0m'
ColorGreen(){ echo -ne "${green}$1${reset}"; }
ColorBlue() { echo -ne "${blue}$1${reset}"; }
ColorRed()  { echo -ne "${red}$1${reset}"; }

# 错误处理
trap 'handle_error $? $LINENO' ERR
handle_error() {
    local exit_code=$1 line_no=$2
    echo "[$(date '+%F %T')] ERROR in $0 line $line_no: Exit code $exit_code" \
        >> /var/log/nockchain-error.log
    systemctl stop nockchain-monitor 2>/dev/null || true
    exit $exit_code
}

# 确保 lsb_release 可用
ensure_lsb_release() {
    if ! command -v lsb_release &>/dev/null; then
        echo ">> installing lsb_release…" >&2
        if command -v apt-get &>/dev/null; then
            apt-get update
            apt-get install -y lsb-release
        elif command -v yum &>/dev/null; then
            yum install -y redhat-lsb-core
        else
            echo "No supported package manager for lsb_release" >&2
            exit 1
        fi
    fi
}

# 资源配置
declare -A RESOURCE_PROFILES=(
    ["beast"]="100 0 0"
    ["balanced"]="70 15 15"
    ["eco"]="50 25 25"
)

# 系统兼容性检查
check_compatibility() {
    echo ">> Running compatibility check…" >&2
    ensure_lsb_release
    local distro version
    distro=$(lsb_release -si)
    version=$(lsb_release -sr)

    case $distro in
        Ubuntu) [[ $version =~ ^(18\.04|20\.04|22\.04)$ ]] \
            || { echo "Unsupported Ubuntu: $version"; return 1; } ;;
        Debian) [[ ${version%%.*} -ge 9 ]] \
            || { echo "Debian>=9 required, found $version"; return 1; } ;;
        CentOS|RedHatEnterpriseServer|Fedora) [[ ${version%%.*} -ge 7 ]] \
            || { echo "RedHat/CentOS>=7 required, found $version"; return 1; } ;;
        *) echo "Unsupported distro: $distro"; return 1 ;;
    esac
    echo "OK: $distro $version"

    # GPU 检测
    if lspci | grep -qi NVIDIA; then
        echo "Detected NVIDIA GPU"
    else
        echo "No NVIDIA GPU detected"
    fi

    # CPU 指令集检测
    if [[ $SKIP_CPU_CHECK -eq 1 ]]; then
        echo "Skipped CPU feature check (SKIP_CPU_CHECK=1)"
    else
        # SSE4.2 为必须
        if grep -q 'sse4_2' /proc/cpuinfo; then
            echo "Supports SSE4.2"
        else
            echo "ERROR: SSE4.2 missing"; return 1
        fi
        # AVX2 可选，仅警告
        if grep -q 'avx2' /proc/cpuinfo; then
            echo "Supports AVX2"
        else
            echo "WARN: AVX2 missing, performance may degrade"
        fi
    fi
}

# 跨发行版依赖安装
install_dependencies() {
    if command -v apt-get &>/dev/null; then
        apt-get update
        apt-get install -y --no-install-recommends \
            build-essential clang-15 llvm-15-dev libclang-15-dev \
            cmake libssl-dev pkg-config uuid-dev cgroup-tools \
            screen htop ntpdate jq python3-venv curl lsb-release
    elif command -v yum &>/dev/null; then
        yum install -y epel-release
        yum install -y \
            gcc gcc-c++ make clang llvm15 llvm15-devel libclang15-devel \
            cmake openssl-devel pkgconfig libuuid-devel \
            libcgroup-tools screen htop ntpdate jq python3-venv curl redhat-lsb-core
    else
        echo "Error: no supported package manager" >&2
        exit 1
    fi
}

# Hoon 编译器构建
build_hoonc() {
    local commit_hash="v1.0.2"
    git clone https://github.com/urbit/hoon.git /tmp/hoon
    pushd /tmp/hoon >/dev/null
      git checkout $commit_hash
      make HOON_ARCH=$(uname -m)-linux install
    popd >/dev/null
}

# 资源调度
resource_scheduler() {
    local mode=${1:-balanced}
    IFS=' ' read -r cpu_pct mem_high mem_max <<< "${RESOURCE_PROFILES[$mode]}"
    cgcreate -g cpu,memory:/nockchain
    cgset -r cpu.max=$((cpu_pct * 10000)) nockchain
    cgset -r memory.high="${mem_high}%" nockchain
    cgset -r memory.max="${mem_max}%" nockchain
    local zk_threads=$(( $(nproc) * cpu_pct / 100 ))
    sed -i "s/^zk_threads = .*/zk_threads = $zk_threads/" /etc/nockchain.conf
}

# Systemd 服务单元
setup_daemon() {
    cat <<EOF >/etc/systemd/system/nockchain-node.service
[Unit]
Description=Nockchain Full Node
After=network.target

[Service]
User=nockchain
Group=nockchain
ExecStart=/usr/local/bin/nockchain \\
    --config /etc/nockchain.conf \\
    --log-level INFO \\
    --metrics 0.0.0.0:9100
Restart=always
RestartSec=30s
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
EOF
    systemctl daemon-reload
}

# 自动化部署
deploy_ecosystem() {
    check_compatibility || handle_error 1 $LINENO

    install_dependencies
    build_hoonc

    # 钱包密钥
    local wallet_dir="/var/lib/nockchain/wallet"
    mkdir -p "$wallet_dir"
    nockchain-wallet keygen | tee "$wallet_dir/seed.txt"
    chmod 600 "$wallet_dir"/*

    # 节点源码编译
    git clone https://github.com/zorp-corp/nockchain /opt/nockchain
    pushd /opt/nockchain >/dev/null
      cargo clean
      cargo build --release --features "zkpow"
      cp target/release/nockchain /usr/local/bin/
    popd >/dev/null

    # 服务配置
    id nockchain &>/dev/null || useradd -r -s /usr/sbin/nologin nockchain
    setup_daemon
    systemctl enable --now nockchain-node

    resource_scheduler balanced
    systemctl start nockchain-monitor

    ColorGreen "部署完成！\n"
}

# 添加挖矿公钥
add_mining_key() {
    read -p "请输入挖矿公钥 URL 或本地路径: " key_src
    local ssh_dir="/home/nockchain/.ssh"
    mkdir -p "$ssh_dir" && chown nockchain:nockchain "$ssh_dir"
    if [[ $key_src =~ ^https?:// ]]; then
        curl -fsSL "$key_src" -o /tmp/miner.pub
    else
        cp "$key_src" /tmp/miner.pub
    fi
    cat /tmp/miner.pub >> "$ssh_dir/authorized_keys"
    chown nockchain:nockchain "$ssh_dir/authorized_keys"
    chmod 600 "$ssh_dir/authorized_keys"
    rm -f /tmp/miner.pub
    ColorGreen "挖矿公钥已添加\n"
}

# 启动节点服务
start_node_service() {
    systemctl start nockchain-node
    ColorGreen "节点服务已启动\n"
}

# 查看日志
view_logs() {
    ColorBlue "== Systemd 日志 (last 100) ==\n"
    journalctl -u nockchain-node -n 100 --no-pager
    echo
    ColorBlue "== 构建日志 (last 50) ==\n"
    tail -n 50 /var/log/nockchain-builder.log
}

# 交互菜单
menu() {
    echo -e "
$(ColorBlue 'Nockchain Builder v2.4 菜单')
$(ColorGreen '1)') 安装并构建
$(ColorGreen '2)') 添加挖矿公钥
$(ColorGreen '3)') 启动节点
$(ColorGreen '4)') 查看日志
$(ColorGreen '0)') 退出
"
    read -p "$(ColorBlue '请选择 [0-4]: ')" c
    case $c in
        1) deploy_ecosystem;; 2) add_mining_key;;
        3) start_node_service;; 4) view_logs;;
        0) exit 0;;
        *) ColorRed "无效选项\n";;
    esac
    menu
}

# 启动
menu
