    # æ£€æŸ¥æ˜¯å¦ä¸º root ç”¨æˆ·
    if [[ "$(id -u)" -eq 0 ]]; then
        echo -e "${RED}é”™è¯¯ï¼šè¯·ä¸è¦ä½¿ç”¨ root ç”¨æˆ·è¿è¡Œå®‰è£…ã€‚${RESET}"
        echo -e "${YELLOW}è¯·åˆ›å»ºä¸€ä¸ªæ™®é€šç”¨æˆ·ï¼Œå¹¶åˆ‡æ¢åˆ°è¯¥ç”¨æˆ·ä¸‹å†è¿è¡Œæ­¤è„šæœ¬ã€‚${RESET}"
        echo -e "ä¾‹å¦‚: adduser miner && usermod -aG sudo miner && su - miner"
        pause_and_return
        return
    fi
    
    # æ¸…ç†æ—§ç¯å¢ƒ
    echo -e "${YELLOW}[*] ä¸ºç¡®ä¿å…¨æ–°å®‰è£…ï¼Œæ­£åœ¨æ¸…ç†æ—§çš„ nockchain ç›®å½•...${RESET}"
    if [ -d "$NCK_DIR" ]; then
        if systemctl is-active --quiet "$SERVICE_NAME"; then
            echo -e "${YELLOW}[!] æ£€æµ‹åˆ°æœåŠ¡æ­£åœ¨è¿è¡Œï¼Œæ­£åœ¨åœæ­¢æœåŠ¡...${RESET}"
            sudo systemctl stop "$SERVICE_NAME"
        fi
        rm -rf "$NCK_DIR"
        echo -e "${GREEN}[+] æ—§ç›®å½•å·²æ¸…ç†ã€‚${RESET}"
    fi

    (
    set -e # ç¡®ä¿å­shellä¸­ä»»ä½•å‘½ä»¤å¤±è´¥éƒ½ä¼šç«‹å³é€€å‡º
    echo -e "${BLUE}--- æ­¥éª¤ 1/4: å®‰è£…ç³»ç»Ÿä¾èµ– ---${RESET}"
    sudo apt-get update
    sudo apt-get install -y clang llvm-dev libclang-dev pkg-config libssl-dev build-essential cmake git make curl dos2unix

    echo -e "${BLUE}--- æ­¥éª¤ 2/4: å®‰è£… Rust ---${RESET}"
    if ! command -v cargo &>/dev/null; then
        curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
    else
        echo -e "${YELLOW}[!] Rust å·²å®‰è£…ï¼Œè·³è¿‡ã€‚${RESET}"
    fi
    source "$HOME/.cargo/env"

    echo -e "${BLUE}--- æ­¥éª¤ 3/4: å…‹éš† Nockchain ä»“åº“å¹¶æ³¨å…¥å†…æ ¸ ---${RESET}"
    echo -e "${BLUE}[*] æ­£åœ¨å…‹éš†ä»“åº“åˆ° $NCK_DIR...${RESET}"
    git clone https://github.com/zorp-corp/nockchain "$NCK_DIR"
    cd "$NCK_DIR"
    
    echo -e "${PURPLE}--- [å¢å¼º] æ­£åœ¨ä»ç½‘ç»œåŠ¨æ€ä¸‹è½½å¹¶æ³¨å…¥ K2 ä¿®å¤ç‰ˆ Hoon å†…æ ¸ (v139) ---${RESET}"
    # [æ ¸å¿ƒä¿®å¤] ä½¿ç”¨ curl ä¸‹è½½å†…æ ¸æ–‡ä»¶ï¼Œè€Œä¸æ˜¯ä»å˜é‡è§£ç 
    if curl -sSLf -o "$HOON_KERNEL_PATH" "$HOON_KERNEL_URL"; then
        echo -e "${GREEN}[+] å¢å¼ºç‰ˆ Hoon å†…æ ¸å·²æˆåŠŸæ³¨å…¥ã€‚${RESET}"
    else
        echo -e "${RED}è‡´å‘½é”™è¯¯: æ— æ³•ä» URL ä¸‹è½½å†…æ ¸æ–‡ä»¶ï¼è¯·æ£€æŸ¥ç½‘ç»œè¿æ¥æˆ– URL æ˜¯å¦æœ‰æ•ˆã€‚${RESET}"
        exit 1
    fi
    
    echo -e "${RED}${BOLD}--- æ­¥éª¤ 4/4: æ‰§è¡Œç»ˆææ‰‹åŠ¨ç¼–è¯‘æµç¨‹ ---${RESET}"
    
    # ç¼–è¯‘é˜¶æ®µ
    echo -e "${CYAN}[*] ç¼–è¯‘é˜¶æ®µ 1/3: æ­£åœ¨ç¼–è¯‘ Hoon ç¼–è¯‘å™¨ (hoonc)...${RESET}"
