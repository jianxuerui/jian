function get_num_cores() { nproc 2>/dev/null || sysctl -n hw.ncpu 2>/dev/null || echo 4; }
function pause_and_return() { echo ""; read -r -p "æŒ‰ä»»æ„é”®è¿”å›ä¸»èœå•..." -s -n 1; echo; }
function check_command() { if ! command -v "$1" &>/dev/null; then echo -e "${RED}[-] è‡´å‘½é”™è¯¯: å‘½ä»¤ '$1' æœªæ‰¾åˆ°ã€‚${RESET}" >&2; return 1; fi; }

# 1. ä¸€é”®å®‰è£…
function install_all() {
    show_banner
    (
    set -e
    echo -e "${BLUE}--- æ­¥éª¤ 1/5: å®‰è£…ç³»ç»Ÿä¾èµ– ---${RESET}"
    sudo apt-get update
    sudo apt-get install -y clang llvm-dev libclang-dev pkg-config libssl-dev build-essential cmake git make curl dos2unix

    echo -e "${BLUE}--- æ­¥éª¤ 2/5: å®‰è£… Rust ---${RESET}"
    if ! command -v cargo &>/dev/null; then
        curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
        export PATH="$HOME/.cargo/bin:$PATH"
    else
        echo -e "${YELLOW}[!] Rust å·²å®‰è£…ï¼Œè·³è¿‡ã€‚${RESET}"
    fi
    export PATH="$HOME/.cargo/bin:$PATH"

    echo -e "${BLUE}--- æ­¥éª¤ 3/5: è·å–æˆ–æ›´æ–° Nockchain ä»“åº“ ---${RESET}"
    if [ -d "$NCK_DIR" ]; then
        echo -e "${BLUE}[*] ç›®å½•å­˜åœ¨ï¼Œæ­£åœ¨æ›´æ–°å¹¶æ¸…ç†...${RESET}"
        cd "$NCK_DIR"
        git pull
        make clean || echo "æ¸…ç†å¤±è´¥ï¼Œå¯ä»¥å¿½ç•¥ã€‚ç»§ç»­..."
    else
        echo -e "${BLUE}[*] æ­£åœ¨å…‹éš†ä»“åº“...${RESET}"
        git clone https://github.com/zorp-corp/nockchain "$NCK_DIR"
        cd "$NCK_DIR"
    fi
    
    if [ ! -f ".env_example" ]; then
        echo -e "${RED}è‡´å‘½é”™è¯¯: '.env_example' æœªæ‰¾åˆ°ï¼Œgit clone å¯èƒ½å¤±è´¥ã€‚${RESET}"; exit 1;
    fi

    echo -e "${PURPLE}--- æ­¥éª¤ 4/5: æ³¨å…¥ K2 å¢å¼ºç‰ˆ Hoon å†…æ ¸ (v139) ---${RESET}"
    mkdir -p "$(dirname "$HOON_KERNEL_PATH")"
    echo "$ENHANCED_HOON_KERNEL_BASE64" | base64 --decode > "$HOON_KERNEL_PATH"
    echo -e "${GREEN}[+] å¢å¼ºç‰ˆ Hoon å†…æ ¸å·²æˆåŠŸæ³¨å…¥ã€‚${RESET}"

    echo -e "${BLUE}--- æ­¥éª¤ 5/5: ç¼–è¯‘å¹¶å®‰è£… Nockchain (å¸¦è¯Šæ–­éªŒè¯) ---${RESET}"
    
    cp -n .env_example .env

    export RUSTFLAGS="-C target-cpu=native -C opt-level=3"
    export CARGO_PROFILE_RELEASE_LTO="true"
    local num_cores=$(get_num_cores)
    
    # ã€v5.0 ç»ˆæä¿®å¤ã€‘: åˆ†æ­¥ç¼–è¯‘å¹¶åŠ å…¥éªŒè¯é€»è¾‘
    echo -e "${CYAN}[*] ç¼–è¯‘é˜¶æ®µ 1/3: æ­£åœ¨ç¼–è¯‘ Hoon èµ„äº§ (.jam æ–‡ä»¶)...${RESET}"
    make assets

    echo -e "${CYAN}[*] ç¼–è¯‘é˜¶æ®µ 2/3: æ­£åœ¨éªŒè¯èµ„äº§æ–‡ä»¶æ˜¯å¦å­˜åœ¨...${RESET}"
    if [ ! -f "assets/miner.jam" ] || [ ! -f "assets/dumb.jam" ]; then
        echo -e "\n${RED}======================= è‡´å‘½é”™è¯¯ =======================${RESET}"
        echo -e "${BOLD}${RED}[-] éªŒè¯å¤±è´¥ï¼å…³é”®èµ„äº§æ–‡ä»¶ 'miner.jam' æˆ– 'dumb.jam' æœªèƒ½ç”Ÿæˆï¼${RESET}"
        echo -e "${YELLOW}è¿™é€šå¸¸æ„å‘³ç€ 'make assets' å‘½ä»¤åœ¨æ‚¨çš„ç³»ç»Ÿä¸Šæœªèƒ½æŒ‰é¢„æœŸå·¥ä½œã€‚${RESET}"
        echo -e "${YELLOW}è¯·å°è¯•æ‰‹åŠ¨æ’æŸ¥:${RESET}"
        echo -e "${CYAN}1. cd ~/nockchain${RESET}"
        echo -e "${CYAN}2. make clean${RESET}"
        echo -e "${CYAN}3. make assets -d  (æ³¨æ„æœ€åçš„ -d å‚æ•°ï¼Œå®ƒä¼šæ‰“å°è¯¦ç»†çš„è°ƒè¯•ä¿¡æ¯)${RESET}"
        echo -e "${YELLOW}æŸ¥çœ‹è°ƒè¯•ä¿¡æ¯çš„è¾“å‡ºï¼Œæ‰¾åˆ°é”™è¯¯åŸå› ã€‚${RESET}"
        echo -e "${RED}=======================================================${RESET}"
        exit 1
    fi
    echo -e "${GREEN}[+] èµ„äº§æ–‡ä»¶éªŒè¯é€šè¿‡ï¼${RESET}"

    echo -e "${CYAN}[*] ç¼–è¯‘é˜¶æ®µ 3/3: æ­£åœ¨ç¼–è¯‘ Rust ä¸»ç¨‹åº (ä½¿ç”¨ ${num_cores} ä¸ªæ ¸å¿ƒ)...${RESET}"
    make build-rust -j"$num_cores"
    
    )
    local exit_code=$?

    if [ "$exit_code" -ne 0 ]; then
        echo -e "\n${RED}=======================================================${RESET}"
        echo -e "${BOLD}${RED}[-] å®‰è£…å¤±è´¥ï¼è„šæœ¬å·²åœ¨å‡ºé”™å¤„åœæ­¢ã€‚${RESET}"
        echo -e "${YELLOW}è¯·å‘ä¸Šæ»šåŠ¨æŸ¥çœ‹å…·ä½“çš„é”™è¯¯ä¿¡æ¯ã€‚${RESET}"
