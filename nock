# ========= å¸¸ç”¨å‡½æ•° =========

# è¿›å…¥é¡¹ç›®ç›®å½•ï¼Œå¤±è´¥åˆ™é€€å‡º
function cd_nck_dir() {
  if [[ -d "$NCK_DIR" ]]; then
    cd "$NCK_DIR" || { echo -e "${RED}[-] é”™è¯¯: æ— æ³•è¿›å…¥é¡¹ç›®ç›®å½•: $NCK_DIR${RESET}"; if [ "$RUN_ONE_LINER_MODE" = true ]; then exit 1; else return 1; fi }
    return 0
  else
